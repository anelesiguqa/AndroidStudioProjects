<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:text="Test button 1"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/test_button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test button 2"/>

    <Button
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test button 3"
        app:layout_constraintBottom_toTopOf="@+id/test_button_1"/>
    <Button
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test button 4"
        android:id="@+id/test_button_4"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        app:layout_constraintEnd_toStartOf="@id/test_button_4"
        app:layout_constraintTop_toBottomOf="@id/test_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test butoon 5"/>

</androidx.constraintlayout.widget.ConstraintLayout>